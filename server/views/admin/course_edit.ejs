<%- include('./nav.ejs') %>
<body>
	<div class="alert alert-success fade show" style="display:none" id="successi">
		Successfully Edited Course Info
	</div>
	<div class="alert alert-success fade show" style="display:none" id="successm">
		Successfully Edited Course meeting
	</div>
	<div class="container pt-4 pb-5">
		<div class="row">
			<div class="col-10">
				<h3 style="display: inline"><%=c.courseCode%>-<%= c.classNum %></h3>
				<input
					style="display: inline"
					class="ps-3 text-muted"
					value="<%=c.courseName%>"
				/>
			</div>
			<div class="col-2">
				<button class="btn btn-primary float-end" id=<%=c._id%> name="editi">Edit</button>
			</div>
		</div>
		<hr class="my-2" />
		<div class="row">
			<textarea style="width: 100%"><%=c.description%></textarea>
		</div>

    	<table class="table">
    		<thead>
    			<tr>
    				<th scope="col">Instructor</th>
    				<th scope="col">Seats</th>
    				<th scope="col">Venue</th>
    			</tr>
    		</thead>
    		<tbody>
    			<tr>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%=c.instructor%>"
    						
    					/>
    				</td>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%=c.seat%>"
    						
    					/>
    				</td>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%=c.venue%>"
    						
    					/>
    				</td>
    			</tr>
    		</tbody>
    	</table>
    	<h4 class="text-muted" style="display: inline">Meetings</h4>
    	<button class="btn btn-link btn-floating" type="button">
    		<i class="fa-solid fa-plus"></i>
    	</button>
    	<table class="table">
    		<thead>
    			<tr>
    				<th scope="col">Weekday</th>
    				<th scope="col">Time</th>
    				<th scope="col">Dates</th>
    				<th scope="col">Action</th>
    			</tr>
    		</thead>
    		<% var weekdays = ["Sunday", "Monday", "Tuesday", "Wednesday",
    		"Thursday", "Friday", "Saturday"] %>
    		<tbody>
    			<% for (let meeting of c.meetings) { %>
    			<tr>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%= weekdays[meeting.day]%>"
    						
    					/>
    				</td>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%=meeting.start%> - <%=meeting.end%>"
    						
    					/>
    				</td>
    				<td>
    					<input
    						type="text"
    						class="form-control"
    						value="<%=meeting.dates%>"
    						
    					/>
    				</td>
    				<td>
    					<button
    						class="btn btn-light btn-rounded btn-sm fw-bold"
    						type="button"
    						data-mdb-ripple-color="dark"
    						onclick=""
    					>
    						Save Changes
    					</button>
    					<button
    						class="btn btn-danger btn-rounded btn-sm fw-bold"
    						data-toggle="modal"
    						data-target="#exampleModal4"
    						type="button"
    						data-mdb-ripple-color="dark"
    						onclick=""
    					>
    						Delete
    					</button>
						<div class="modal fade" id=<%=c.courseCode%>D tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
							  <div class="modal-content">
								<div class="modal-header">
								  <h5 class="modal-title" id="exampleModalLabel"></h5>
								</div>
								<div class="modal-body">Confirm delete <%=c.courseCode %>?</div>
								<div class="modal-footer">
								  <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
								  <button type="button" class="btn btn-danger btn-rounded btn-sm fw-bold" 
								 id=<%=c._id %> data-mdb-dismiss="modal" name="delete" >Save changes</button>
								</div>
							  </div>
							</div>
						</div>
    				</td>
    			</tr>
    			<%}%>
    		</tbody>
    	</table>
    	<div class="float-center d-flex justify-content-center">
    		<button class="btn btn-link">back</button>
    	</div>
    </div>
</body>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>
<script>

</script>
