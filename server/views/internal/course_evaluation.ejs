<%- include('./nav.ejs') %>
<div class="container pt-4 pb-5">
	<div class="row">
		<div class="col-10">
			<h3 style="display: inline"><%=course.courseCode%>-<%= course.classNo %></h3>
			<h3 style="display: inline" class="ps-3 text-muted">
				<%=course.courseName%>
			</h3>
		</div>
		<div class="col-2">
			<button class="btn btn-link float-end">Back</button>
		</div>
	</div>
	<hr class="my-2" />
	<p class="text-muted"><%=course.description%></p>
	<div class="row d-flex justify-content-center">
		<div class="col">
			<div
				class="card shadow-0 border"
				style="background-color: #f0f2f5"
			>
				<div class="card-body p-4">
					<div class="input-group form-outline mb-4">
						<input
							type="text"
							id="evaluation"
							class="form-control"
							placeholder="Type comment..."
						/>
						<label class="form-label" for="addANote"
							>+ Add an evaluation</label
						>
						<div class="vr vr-blurry"></div>
						<button
							class="btn text-muted shadow-0 py-1 ps-3 pe-3" onclick="addEval()"
						>
							<i class="fas fa-paper-plane"></i>
						</button>
					</div>

					<% for (let eval of evaluations) { %>
					<div class="card mb-4">
						<div class="card-body">
							<p class="fw-light"><%=eval.text %></p>

							<div class="d-flex justify-content-between">
								<div
									class="d-flex flex-row align-items-center"
								>
									<p class="small mb-0 ms-2">
										<strong>
											<% if (eval.userID._id.toString() != self_id.toString()){ %>
												<%=eval.userID.fullName%>
											<% }else{ %>
												You
											<%}%>
										</strong>
									</p>
								</div>
								<div
									class="d-flex flex-row align-items-center"
								>
									<p class="small text-muted mb-0">
										<%=eval.createTime%>
									</p>
									
								</div>
							</div>
						</div>
					</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
	<div class="float-center d-flex justify-content-center">
		<button class="btn btn-link">back</button>
	</div>
</div>
<script>
	function addEval(){
		fetch('/api/courses/evaluation/<%=course._id%>', {
			method: 'POST',
			headers: {
				"Content-Type": "application/json",
			},
			body: JSON.stringify({text: $('#evaluation').val()}),
		}).then(res=>res.json()).then(res=>{
			if (res.status == 500) {
				alert(res.message);
			} else {
				alert("New evaluation added");
				location.reload();
			}
		})
	}
</script>

<%- include('./nav_end.ejs') %>
