<%- include('./nav.ejs') %>
<body>
	<div class="container pt-4 pb-5">
		<div class="row">
			<div class="col-6">
				<h3>User Management</h3>
			</div>
			<div class="col-6 d-flex justify-content-end"><a class="btn btn-sm btn-primary align-self-center" href="/admin/add-user">+ New User</a></div>
		  </div>
		<hr class="my-2" />
		<table class="table stripe mt-0" id="table" style="width: 100%">
			<thead>
				<tr>
					<th scope="col">Email</th>
					<th scope="col">Name</th>
					<th scope="col">Role</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				<% data.users.forEach((user)=> { %>
				<tr>
					<td><%= user.email%></td>
					<td><%= user.fullName%></td>
					<td><%=user.role%></td>
					<td>
						<button
							class="btn btn-light btn-rounded btn-sm fw-bold"
							data-toggle="modal"
							data-target="#exampleModal3"
							type="button"
							data-mdb-ripple-color="dark"
							onclick=""
						>
							Reset Password
						</button>
						<button
							id="d+<%=user._id%>+<%=user.fullName%>"
							class="btn btn-danger btn-rounded btn-sm fw-bold"
							data-toggle="modal"
							data-target="#exampleModal4"
							type="button"
							data-mdb-ripple-color="dark"
							onclick="confirmDelete(this)"
						>
							Delete
						</button>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</body>
<script>
	$(document).ready(function () {
		$("#table").DataTable({
			columnDefs: [
				{
					orderable: false,
					targets: 3,
				},
			],
		});
	});

	function confirmDelete(btn) {
		let data = btn.id.split("+");
        let confirmAction = confirm(`Are you sure to delete the user ${data[2]} ?`);
        if (confirmAction) {
			fetch(
				"/api/users/delete-user",
				{
					method: "POST",
					headers: {
						"Content-Type": "application/json",
					},
					body: JSON.stringify({_id:data[1]}),
				}
			).then(async (data) => {
				if (data.status == "200") {
					window.location.replace(
						"/admin/users"
					);
					alert("success!");
				} else {
					alert("error!");
				}
			});
      }
	}
</script>
<%- include('./nav_end.ejs') %>
